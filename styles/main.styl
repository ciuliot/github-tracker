@font-face {
  font-family: 'Glyphicons Halflings';

  src: url('../fonts/bootstrap/glyphicons-halflings-regular.eot');
  src: url('../fonts/bootstrap/glyphicons-halflings-regular.eot?#iefix') format('embedded-opentype'), 
       url('../fonts/bootstrap/glyphicons-halflings-regular.woff') format('woff'), 
       url('../fonts/bootstrap/glyphicons-halflings-regular.ttf') format('truetype'), 
       url('../fonts/bootstrap/glyphicons-halflings-regular.svg#glyphicons_halflingsregular') format('svg');
}

.loading-indicator
	background-image url("../images/loading_indicator.gif")
	width 16px
	height 16px

.saving-indicator
	background-image url("../images/saving_indicator.gif")
	width 16px
	height 16px

.panel
	margin-bottom 4px

.issue-assignee-avatar
	width 16px
	height 16px
	margin-right 4px

.assignee-button
	margin-right 8px

.swimlane
	border-right: 2px solid #ddd;

.checkout-command input
	border 0px
	padding 2px 4px
	font-family Menlo,Monaco,Consolas,"Courier New",monospace
	font-size 100%
	color #fff
	background-color #333
	border-radius 3px;
	box-shadow inset 0 -1px 0 rgba(0,0,0,.25)
	width 200px

.category-heading
	padding-top 4px
	padding-bottom 4px

.category-panel:not(:last-child)
	margin-bottom 0px

table.phases
	margin-bottom 0px

.phase-header
	font-weight bold
	text-align center

.phase.top-priority
	background-color rgba(255,0,0,0.1)
	padding-top 8px
	padding-bottom 8px
	margin-bottom 8px

.issue
	position relative

.issue .title
	cursor pointer
	margin-right 24px

.issue .panel-heading
	padding-top 4px
	padding-bottom 4px

.issue .description
	white-space pre-wrap

.issue .description.background
	opacity 0.2

.issue .panel-body
	min-height 38px

.issue .actions
	display none
	position absolute
	bottom 4px
	left 4px
	z-index 1

.issue .avatar
	position absolute
	bottom 0px
	right 0px
	width 30px
	height 30px
	opacity 0.3

.issue .type
	position absolute
	bottom 8px
	right 34px

#new-branch.alert
	position absolute
	right 4px
	z-index 10

#issue-modal > .comments
	position absolute
	top 0px
	width 400px
	margin 30px

#issue-modal > .comments .panel-heading
	padding 4px 8px

#issue-modal > .comments .panel-body
	padding 4px 8px

#issue-modal > .comments .avatar
	float: right;
	width 30px
	height 30px